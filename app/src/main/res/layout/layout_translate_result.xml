<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f0f0f0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_translate_result"
        android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/text_trans_origin"
            android:gravity="center_vertical"
            android:textSize="30sp"
            android:textColor="#454545"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_trans_result"
            android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_trans_library"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/button_add_to_words_book"
            android:src="@drawable/ic_favorite_word_no"
            android:keepScreenOn="false"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"/>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <androidx.viewpager.widget.PagerTabStrip
            android:id="@+id/pager_tab"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="top"
            android:background="#f0f0f0"
            android:textColor="#ff0000"></androidx.viewpager.widget.PagerTabStrip>
    </androidx.viewpager.widget.ViewPager>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/to_book"
        android:layout_gravity="center"
        android:background="@drawable/ic_words_book" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="250dp"
            android:layout_gravity="center"
            android:id="@+id/image_loading"
            android:background="@drawable/ic_loading"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/text_loading"
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>
